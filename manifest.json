{
    "action": {
        "default_icon": "hello_extensions.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "sort-by-title": {
            "description": "Sort tabs by title",
            "suggested_key": {
                "default": "Alt+Shift+T",
                "mac": "Alt+Shift+T"
            }
        },
        "sort-by-url": {
            "description": "Sort tabs by URL",
            "suggested_key": {
                "default": "Alt+Shift+U",
                "mac": "Alt+Shift+U"
            }
        }
    },
    "description": "Sort tabs by title or website",
    "manifest_version": 3,
    "name": "Organic Tab Sorter",
    "permissions": [
        "storage",
        "tabGroups",
        "tabs"
    ],
    "version": "1.0.0"
}